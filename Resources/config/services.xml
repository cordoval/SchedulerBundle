<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="palleas_scheduler.controller.listener.class">Palleas\SchedulerBundle\EventListener\ControllerListener</parameter>
    </parameters>

    <services>
        <service id="palleas_scheduler.controller.listener" class="%palleas_scheduler.controller.listener.class%">
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelRequest" />
        </service>
    </services>

</container>